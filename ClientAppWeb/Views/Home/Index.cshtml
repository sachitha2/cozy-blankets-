                                                            <input type="text" name="modelName" value="@item.ModelName" required style="width: 100%; padding: 6px;" />
                                                        </div>
                                                        <div style="margin-bottom: 8px;">
                                                            <label>Quantity</label>
                                                            <input type="number" name="quantity" value="@item.Quantity" required min="0" style="width: 100%; padding: 6px;" />
                                                        </div>
                                                        <div style="margin-bottom: 8px;">
                                                            <label>Unit Cost</label>
                                                            <input type="number" name="unitCost" value="@item.UnitCost" required min="0" step="0.01" style="width: 100%; padding: 6px;" />
                                                        </div>
                                                        <button type="submit" class="btn btn-primary" style="width: 100%;">Update</button>
                                                    </form>
                                                    <form method="post" asp-action="DeleteDistributorInventory" style="margin-top: 8px;" onsubmit="return confirm('Are you sure you want to delete this inventory item?');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button type="submit" class="btn btn-danger" style="width: 100%;">Delete</button>
                                                    </form>
                                                </div>
                                            </details>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            Use <strong>My inventory</strong> in the sidebar to load distributor inventory.
                        </div>
                    }
                </div>

                <!-- Distributor Orders Tab -->
                <div id="distributor-orders" class="tab-content @(Model.ActiveTab == "distributor-orders" ? "active" : "")" style="@(Model.ActiveTab == "distributor-orders" ? "" : "display: none;")">
                    <h3>Distributor Orders</h3>
                    @if (Model.DistributorOrders.Any())
                    {
                        <div style="margin-bottom: 16px;">
                            <form method="post" asp-action="LoadDistributorOrders" style="display: inline-block;">
                                @Html.AntiForgeryToken()
                                <select name="status" style="padding: 8px; margin-right: 8px;">
                                    <option value="">All Statuses</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Fulfilled">Fulfilled</option>
                                    <option value="Cancelled">Cancelled</option>
                                    <option value="PendingManufacturer">Pending Manufacturer</option>
                                </select>
                                <button type="submit" class="btn btn-default">Filter</button>
                            </form>
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Seller ID</th>
                                    <th>Blanket ID</th>
                                    <th>Model Name</th>
                                    <th>Quantity</th>
                                    <th>Status</th>
                                    <th>Order Date</th>
                                    <th>Fulfilled Date</th>
                                    <th>Delivery Type</th>
                                    <th>Delivery Address</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.DistributorOrders)
                                {
                                    <tr>
                                        <td>@order.Id</td>
                                        <td>@order.SellerId</td>
                                        <td>@order.BlanketId</td>
                                        <td>@order.ModelName</td>
                                        <td>@order.Quantity</td>
                                        <td>
                                            <span class="badge @(order.Status == "Fulfilled" ? "badge-success" : order.Status == "Cancelled" ? "badge-danger" : "badge-warning")">
                                                @order.Status
                                            </span>
                                        </td>
                                        <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>@(order.FulfilledDate?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</td>
                                        <td>@(order.DeliveryTypeName ?? "Not assigned")</td>
                                        <td>@(order.DeliveryAddress ?? "N/A")</td>
                                        <td>
                                            <details>
                                                <summary style="cursor: pointer; color: #007bff;">Manage</summary>
                                                <div style="padding: 12px; background: #f9f9f9; margin-top: 8px; border-radius: 4px;">
                                                    <form method="post" asp-action="UpdateOrderStatus" style="margin-bottom: 12px;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@order.Id" />
                                                        <label>Status</label>
                                                        <select name="status" style="width: 100%; padding: 6px; margin-bottom: 8px;">
                                                            <option value="Pending" selected="@(order.Status == "Pending")">Pending</option>
                                                            <option value="Fulfilled" selected="@(order.Status == "Fulfilled")">Fulfilled</option>
                                                            <option value="Cancelled" selected="@(order.Status == "Cancelled")">Cancelled</option>
                                                            <option value="PendingManufacturer" selected="@(order.Status == "PendingManufacturer")">Pending Manufacturer</option>
                                                        </select>
                                                        <button type="submit" class="btn btn-primary" style="width: 100%;">Update Status</button>
                                                    </form>
                                                    <form method="post" asp-action="UpdateOrderDelivery">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@order.Id" />
                                                        <label>Delivery Type</label>
                                                        <select name="deliveryTypeId" style="width: 100%; padding: 6px; margin-bottom: 8px;">
                                                            <option value="">None</option>
                                                            @foreach (var dt in Model.DeliveryTypes.Where(d => d.IsActive))
                                                            {
                                                                <option value="@dt.Id" selected="@(order.DeliveryTypeId == dt.Id)">@dt.Name - $@dt.Cost.ToString("F2") (@dt.EstimatedDays days)</option>
                                                            }
                                                        </select>
                                                        <label>Delivery Address</label>
                                                        <input type="text" name="deliveryAddress" value="@order.DeliveryAddress" placeholder="Delivery address" style="width: 100%; padding: 6px; margin-bottom: 8px;" />
                                                        <button type="submit" class="btn btn-success" style="width: 100%;">Update Delivery</button>
                                                    </form>
                                                </div>
                                            </details>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            Use <strong>My orders</strong> in the sidebar to load distributor orders.
                        </div>
                    }
                </div>

                <!-- Delivery Types Tab -->
                <div id="delivery-types" class="tab-content @(Model.ActiveTab == "delivery-types" ? "active" : "")" style="@(Model.ActiveTab == "delivery-types" ? "" : "display: none;")">
                    <h3>Delivery Types Management</h3>
                    <div style="margin-bottom: 16px;">
                        <form method="post" asp-action="AddDeliveryType" style="display: flex; gap: 8px; flex-wrap: wrap; align-items: end; padding: 16px; background: #f5f5f5; border-radius: 4px;">
                            @Html.AntiForgeryToken()
                            <div style="flex: 1; min-width: 150px;">
                                <label>Name</label>
                                <input type="text" name="name" required style="width: 100%; padding: 8px;" />
                            </div>
                            <div style="flex: 2; min-width: 200px;">
                                <label>Description</label>
                                <input type="text" name="description" required style="width: 100%; padding: 8px;" />
                            </div>
                            <div style="flex: 1; min-width: 100px;">
                                <label>Cost</label>
                                <input type="number" name="cost" required min="0" step="0.01" style="width: 100%; padding: 8px;" />
                            </div>
                            <div style="flex: 1; min-width: 100px;">
                                <label>Estimated Days</label>
                                <input type="number" name="estimatedDays" required min="1" style="width: 100%; padding: 8px;" />
                            </div>
                            <div>
                                <button type="submit" class="btn btn-success">Add Delivery Type</button>
                            </div>
                        </form>
                    </div>
                    @if (Model.DeliveryTypes.Any())
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Cost</th>
                                    <th>Estimated Days</th>
                                    <th>Active</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var dt in Model.DeliveryTypes)
                                {
                                    <tr>
                                        <td>@dt.Id</td>
                                        <td>@dt.Name</td>
                                        <td>@dt.Description</td>
                                        <td>$@dt.Cost.ToString("F2")</td>
                                        <td>@dt.EstimatedDays</td>
                                        <td>@(dt.IsActive ? "Yes" : "No")</td>
                                        <td>
                                            <details>
                                                <summary style="cursor: pointer; color: #007bff;">Edit</summary>
                                                <div style="padding: 12px; background: #f9f9f9; margin-top: 8px; border-radius: 4px;">
                                                    <form method="post" asp-action="UpdateDeliveryType">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@dt.Id" />
                                                        <div style="margin-bottom: 8px;">
                                                            <label>Name</label>
                                                            <input type="text" name="name" value="@dt.Name" required style="width: 100%; padding: 6px;" />
                                                        </div>
                                                        <div style="margin-bottom: 8px;">
                                                            <label>Description</label>
                                                            <input type="text" name="description" value="@dt.Description" required style="width: 100%; padding: 6px;" />
                                                        </div>
                                                        <div style="margin-bottom: 8px;">
                                                            <label>Cost</label>
                                                            <input type="number" name="cost" value="@dt.Cost" required min="0" step="0.01" style="width: 100%; padding: 6px;" />
                                                        </div>
                                                        <div style="margin-bottom: 8px;">
                                                            <label>Estimated Days</label>
                                                            <input type="number" name="estimatedDays" value="@dt.EstimatedDays" required min="1" style="width: 100%; padding: 6px;" />
                                                        </div>
                                                        <div style="margin-bottom: 8px;">
                                                            <label>
                                                                <input type="checkbox" name="isActive" value="true" @(dt.IsActive ? "checked" : "") />
                                                                Active
                                                            </label>
                                                        </div>
                                                        <button type="submit" class="btn btn-primary" style="width: 100%;">Update</button>
                                                    </form>
                                                    <form method="post" asp-action="DeleteDeliveryType" style="margin-top: 8px;" onsubmit="return confirm('Are you sure you want to delete this delivery type?');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@dt.Id" />
                                                        <button type="submit" class="btn btn-danger" style="width: 100%;">Delete</button>
                                                    </form>
                                                </div>
                                            </details>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No delivery types found. Use the form above to add a new delivery type.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div id="imageModal" class="modal-overlay">
        <div class="modal-box">
            <h4 id="imageModalTitle">Add image</h4>
            <form method="post" asp-action="SetBlanketImageUrl" id="formImageUrl">
                @Html.AntiForgeryToken()
                <input type="hidden" name="blanketId" id="modalBlanketId" />
                <input type="text" name="imageUrl" placeholder="Image URL (e.g. https://... or /images/blankets/photo.jpg)" style="margin-bottom: 12px;" />
                <button type="submit" class="btn btn-primary" style="width: 100%;">Set URL</button>
            </form>
            <p style="margin: 16px 0 8px; font-size: 13px; color: #555;">— or upload —</p>
            <form method="post" asp-action="UploadBlanketImage" enctype="multipart/form-data" id="formUploadImage">
                @Html.AntiForgeryToken()
                <input type="hidden" name="blanketId" id="modalBlanketIdUpload" />
                <input type="file" name="imageFile" accept=".jpg,.jpeg,.png,.gif,.webp" required style="margin-bottom: 12px;" />
                <button type="submit" class="btn btn-success" style="width: 100%;">Upload image</button>
            </form>
            <button type="button" class="btn btn-default" style="width: 100%; margin-top: 12px;" onclick="closeImageModal()">Cancel</button>
        </div>
    </div>

    <script>
        // Order items management
        let orderItems = [];

        function addOrderItem() {
            const select = document.getElementById('blanketSelect');
            const quantityInput = document.getElementById('itemQuantity');
            
            if (!select.value) {
                alert('Please select a blanket');
                return;
            }
            
            const quantity = parseInt(quantityInput.value) || 1;
            if (quantity < 1) {
                alert('Quantity must be at least 1');
                return;
            }
            
            const blanketId = parseInt(select.value);
            const modelName = select.options[select.selectedIndex].getAttribute('data-name');
            const unitPrice = parseFloat(select.options[select.selectedIndex].getAttribute('data-price'));
            
            // Check if item already exists
            const existingIndex = orderItems.findIndex(item => item.blanketId === blanketId);
            if (existingIndex >= 0) {
                orderItems[existingIndex].quantity += quantity;
            } else {
                orderItems.push({
                    blanketId: blanketId,
                    quantity: quantity,
                    modelName: modelName,
                    unitPrice: unitPrice
                });
            }
            
            updateOrderItemsDisplay();
            quantityInput.value = 1;
        }

        function addToOrderForm(blanketId, modelName, unitPrice) {
            // Switch to create order tab
            showTab('create-order');
            
            // Set the select and add item
            document.getElementById('blanketSelect').value = blanketId;
            addOrderItem();
        }

        function removeOrderItem(index) {
            orderItems.splice(index, 1);
            updateOrderItemsDisplay();
        }

        function updateOrderItemsDisplay() {
            const tbody = document.getElementById('orderItemsBody');
            const totalCell = document.getElementById('orderTotal');
            const jsonInput = document.getElementById('orderItemsJson');
            
            tbody.innerHTML = '';
            let total = 0;
            
            orderItems.forEach((item, index) => {
                const subtotal = item.quantity * item.unitPrice;
                total += subtotal;
                
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td style="padding: 8px;">${item.modelName}</td>
                    <td style="padding: 8px; text-align: right;">${item.quantity}</td>
                    <td style="padding: 8px; text-align: right;">$${item.unitPrice.toFixed(2)}</td>
                    <td style="padding: 8px; text-align: right;">$${subtotal.toFixed(2)}</td>
                    <td style="padding: 8px; text-align: center;">
                        <button type="button" class="btn btn-danger" style="padding: 4px 8px; font-size: 12px;" onclick="removeOrderItem(${index})">Remove</button>
                    </td>
                `;
                tbody.appendChild(row);
            });
            
            totalCell.textContent = '$' + total.toFixed(2);
            jsonInput.value = JSON.stringify(orderItems.map(item => ({ blanketId: item.blanketId, quantity: item.quantity })));
        }

        // Form validation
        document.getElementById('createOrderForm')?.addEventListener('submit', function(e) {
            if (orderItems.length === 0) {
                e.preventDefault();
                alert('Please add at least one item to the order');
                return false;
            }
        });

        function showTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(function(tab) {
                tab.classList.remove('active');
                tab.style.display = tab.id === tabName ? '' : 'none';
            });
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            var el = document.getElementById(tabName);
            if (el) el.classList.add('active');
            if (event && event.target) event.target.classList.add('active');
        }
        function openImageModal(blanketId, name) {
            document.getElementById('imageModalTitle').textContent = 'Add image: ' + name;
            document.getElementById('modalBlanketId').value = blanketId;
            document.getElementById('modalBlanketIdUpload').value = blanketId;
            document.getElementById('imageModal').classList.add('show');
        }
        function closeImageModal() {
            document.getElementById('imageModal').classList.remove('show');
        }
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.add-image-link').forEach(function(a) {
                a.addEventListener('click', function(e) {
                    e.preventDefault();
                    openImageModal(this.getAttribute('data-id'), this.getAttribute('data-name') || 'Product');
                });
            });
            document.querySelectorAll('.tab').forEach(function(tab) {
                tab.addEventListener('click', function() {
                    var tabName = this.textContent.toLowerCase().replace(/\s+/g, '');
                    if (tabName === 'myorders') tabName = 'orders';
                    else if (tabName === 'stockinfo') tabName = 'stock';
                    else if (tabName === 'customerorders') tabName = 'orders';
                    else if (tabName === 'manufacturer') tabName = 'manufacturer';
                    else if (tabName === 'distributorinventory') tabName = 'distributor-inventory';
                    else if (tabName === 'distributororders') tabName = 'distributor-orders';
                    else if (tabName === 'deliverytypes') tabName = 'delivery-types';
                    else if (tabName === 'sellerblankets') tabName = 'seller-blankets';
                    else if (tabName === 'createorder') tabName = 'create-order';
                    else if (tabName === 'sellerorders') tabName = 'seller-orders';
                    showTab(tabName);
                });
            });
            document.getElementById('imageModal').addEventListener('click', function(e) {
                if (e.target === this) closeImageModal();
            });
        });
    </script>
</body>
</html>
